<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sunnsoft.goodsdetaildemo.IdeaScrollView
        android:id="@+id/idea_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.sunnsoft.goodsdetaildemo.IdeaViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/c_F6F9FA"></com.sunnsoft.goodsdetaildemo.IdeaViewPager>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_15"
                    android:text="正品保证，质量保证，数量有限，先购先得"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:text=""
                    android:textColor="@color/c_F08719"
                    android:textSize="@dimen/sp_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@color/ui_bgs" />

                <LinearLayout
                    android:id="@+id/ll_specification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数量"
                        android:textColor="@color/c_999999"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_specification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:drawableRight="@drawable/arrow_right_gray"
                        android:gravity="center_vertical|right"
                        android:hint="请选择"
                        android:singleLine="true"
                        android:textColor="@color/color_et_color"
                        android:textColorHint="@color/color_et_hint_color"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@color/ui_bgs" />

                <TextView
                    android:id="@+id/tv_parameter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/arrow_right_gray"
                    android:gravity="center_vertical"
                    android:padding="@dimen/dp_15"
                    android:singleLine="true"
                    android:text="参数"
                    android:textColor="@color/color_et_hint_color"
                    android:textColorHint="@color/color_et_hint_color"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@color/ui_bgs" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    android:padding="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="配送"
                        android:textColor="@color/c_999999"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:drawableRight="@drawable/arrow_right_gray"
                        android:gravity="center_vertical|right"
                        android:hint=""
                        android:textColor="@color/color_et_color"
                        android:textColorHint="@color/color_et_hint_color"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@color/ui_bgs" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="说明"
                        android:textColor="@color/c_999999"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:drawableRight="@drawable/arrow_right_gray"
                        android:gravity="center_vertical|right"
                        android:hint=""
                        android:textColor="@color/color_et_color"
                        android:textColorHint="@color/color_et_hint_color"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@color/ui_bgs" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_15"
                    android:text="评价" />

                <FrameLayout
                    android:id="@+id/fl_evaluation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></FrameLayout>

                <LinearLayout
                    android:id="@+id/ll_store"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:background="@color/ui_bgs" />

                    <LinearLayout
                        android:id="@+id/ll_stores"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_15">

                        <ImageView
                            android:id="@+id/iv_stores"
                            android:layout_width="@dimen/dp_39"
                            android:layout_height="@dimen/dp_39"
                            android:scaleType="centerCrop"
                            android:src="@color/c_cccccc" />

                        <TextView
                            android:id="@+id/tv_stores_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/c_333333"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableRight="@drawable/arrow_right_gray"
                            android:gravity="center"
                            android:text="进入店铺"
                            android:textColor="@color/c_F08719"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="WebViewLayout">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/ui_bgs"
                    android:padding="@dimen/dp_15">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="上拉查看图文详情"
                        android:textColor="@color/c_999999"
                        android:textSize="@dimen/dp_10" />
                </RelativeLayout>

                <WebView
                    android:id="@+id/web_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></WebView>
            </LinearLayout>


        </LinearLayout>
    </com.sunnsoft.goodsdetaildemo.IdeaScrollView>

    <LinearLayout
        android:id="@+id/headerParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/view_status_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:background="#00FFFFFF"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/shape_goodsdetail_share_bg_v1_1"
                android:onClick="onClick"
                android:scaleType="center"
                android:src="@drawable/arrow_back_white" />


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/rb_goods"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:gravity="center"
                        android:text="商品"
                        android:textColor="@color/c_333333"
                        android:background="@drawable/radiobutton_bottom_line"
                        />

                    <RadioButton
                        android:id="@+id/rb_evaluation"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:button="@null"
                        android:gravity="center"
                        android:text="评价"
                        android:textColor="@color/c_333333"
                        android:background="@drawable/radiobutton_bottom_line"
                        />

                    <RadioButton
                        android:id="@+id/rb_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:gravity="center"
                        android:text="详情"
                        android:textColor="@color/c_333333"
                        android:background="@drawable/radiobutton_bottom_line"
                        />

                </RadioGroup>
            </RelativeLayout>


            <ImageView
                android:id="@+id/iv_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/shape_goodsdetail_share_bg_v1_1"
                android:onClick="onClick"
                android:scaleType="center"
                android:src="@drawable/icon_collection_n_white" />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/shape_goodsdetail_share_bg_v1_1"
                android:onClick="onClick"
                android:scaleType="center"
                android:src="@drawable/icon_detail_share" />

        </LinearLayout>


    </LinearLayout>

</FrameLayout>
